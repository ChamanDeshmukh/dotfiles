#!/bin/sh

case "$(printf "Hibernate\\nRestart\\nLock\\nSleep\\nPoweroff" | dmenu -l 5 -i -p "Select : ")" in
	"Poweroff") systemctl poweroff;;
	"Restart") systemctl reboot;;
	"Lock") betterlockscreen -l dim;;
	"Sleep") betterlockscreen -l dim & systemctl suspend;;
	"Hibernate") betterlockscreen -l dim & systemctl hibernate;;
esac
